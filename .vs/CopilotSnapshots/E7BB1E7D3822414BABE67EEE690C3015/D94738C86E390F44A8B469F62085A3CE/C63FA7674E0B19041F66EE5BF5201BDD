// Service API pour les Participations
const ParticipationAPI = {
    async getAll() {
        const response = await fetch(`${API_BASE_URL}/Participation`);
        if (!response.ok) throw new Error('Erreur lors de la récupération des participations');
        return await response.json();
    },

    async getById(cagnotteId, participantId) {
        const response = await fetch(`${API_BASE_URL}/Participation/${cagnotteId}/${participantId}`);
        if (!response.ok) throw new Error('Participation introuvable');
        return await response.json();
    },

    async getByCagnotte(cagnotteId) {
        const response = await fetch(`${API_BASE_URL}/Participation/cagnotte/${cagnotteId}`);
        if (!response.ok) throw new Error('Erreur lors de la récupération');
        return await response.json();
    },

    async getByParticipant(participantId) {
        const response = await fetch(`${API_BASE_URL}/Participation/participant/${participantId}`);
        if (!response.ok) throw new Error('Erreur lors de la récupération');
        return await response.json();
    },

    async create(data) {
        const response = await fetch(`${API_BASE_URL}/Participation`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        if (!response.ok) throw new Error('Erreur lors de la création');
        return await response.json();
    },

    async update(cagnotteId, participantId, data) {
        const response = await fetch(`${API_BASE_URL}/Participation/${cagnotteId}/${participantId}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        if (!response.ok) throw new Error('Erreur lors de la mise à jour');
        return await response.json();
    },

    async delete(cagnotteId, participantId) {
        const response = await fetch(`${API_BASE_URL}/Participation/${cagnotteId}/${participantId}`, {
            method: 'DELETE'
        });
        if (!response.ok) throw new Error('Erreur lors de la suppression');
        return true;
    }
};
