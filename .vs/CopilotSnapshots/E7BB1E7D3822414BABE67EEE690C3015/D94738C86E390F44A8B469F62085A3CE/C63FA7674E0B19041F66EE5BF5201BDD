// Configuration de l'API
const API_BASE_URL = 'https://localhost:7115/api'; // Modifiez selon votre port

// Service API pour les Cagnottes
const CagnotteAPI = {
    async getAll() {
        const response = await fetch(`${API_BASE_URL}/Cagnotte`);
        if (!response.ok) throw new Error('Erreur lors de la récupération des cagnottes');
        return await response.json();
    },

    async getById(id) {
        const response = await fetch(`${API_BASE_URL}/Cagnotte/${id}`);
        if (!response.ok) throw new Error('Cagnotte introuvable');
        return await response.json();
    },

    async create(data) {
        const response = await fetch(`${API_BASE_URL}/Cagnotte`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        if (!response.ok) {
            const error = await response.json();
            throw new Error(error.error || 'Erreur lors de la création');
        }
        return await response.json();
    },

    async update(id, data) {
        const response = await fetch(`${API_BASE_URL}/Cagnotte/${id}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        if (!response.ok) throw new Error('Erreur lors de la mise à jour');
        return await response.json();
    },

    async delete(id) {
        const response = await fetch(`${API_BASE_URL}/Cagnotte/${id}`, {
            method: 'DELETE'
        });
        if (!response.ok) throw new Error('Erreur lors de la suppression');
        return true;
    }
};

