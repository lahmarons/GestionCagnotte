@page "/cagnotte/{Id:int}"
@inject CagnotteService CagnotteService
@inject NavigationManager Navigation

<PageTitle>Détails de la cagnotte</PageTitle>

<div class="container mt-4">
    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
        </div>
    }
    else if (cagnotte == null)
    {
        <div class="alert alert-danger">
            Cagnotte introuvable
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <h1 class="card-title">@cagnotte.Titre</h1>
                        <p class="text-muted">@cagnotte.Description</p>

                        <div class="my-4">
                            <div class="d-flex justify-content-between mb-2">
                                <h4>@cagnotte.MontantCollecte.ToString("C")</h4>
                                <span class="text-muted">sur @cagnotte.MontantObjectif.ToString("C")</span>
                            </div>
                            <div class="progress" style="height: 30px;">
                                <div class="progress-bar bg-success" 
                                     role="progressbar" 
                                     style="width: @GetPercentage()%">
                                    @GetPercentage()%
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p><i class="bi bi-person"></i> <strong>Organisateur:</strong> @cagnotte.Organisateur</p>
                            </div>
                            <div class="col-md-6">
                                <p><i class="bi bi-calendar"></i> <strong>Date limite:</strong> @cagnotte.DateLimite.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>

                        @if (cagnotte.EstActive)
                        {
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5>Contribuer à cette cagnotte</h5>
                                    <EditForm Model="contributionRequest" OnValidSubmit="HandleContribution">
                                        <div class="mb-3">
                                            <label class="form-label">Votre nom</label>
                                            <InputText class="form-control" @bind-Value="contributionRequest.NomContributeur" />
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Montant (€)</label>
                                            <InputNumber class="form-control" @bind-Value="contributionRequest.Montant" />
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Message (optionnel)</label>
                                            <InputTextArea class="form-control" rows="3" @bind-Value="contributionRequest.Message" />
                                        </div>

                                        @if (!string.IsNullOrEmpty(errorMessage))
                                        {
                                            <div class="alert alert-danger">@errorMessage</div>
                                        }

                                        @if (!string.IsNullOrEmpty(successMessage))
                                        {
                                            <div class="alert alert-success">@successMessage</div>
                                        }

                                        <button type="submit" class="btn btn-primary" disabled="@isSubmittingContribution">
                                            @if (isSubmittingContribution)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            Contribuer
                                        </button>
                                    </EditForm>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                Cette cagnotte est terminée et n'accepte plus de contributions.
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Contributions (@contributions.Count)</h5>
                    </div>
                    <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                        @if (!contributions.Any())
                        {
                            <p class="text-muted">Aucune contribution pour le moment.</p>
                        }
                        else
                        {
                            @foreach (var contribution in contributions.OrderByDescending(c => c.DateContribution))
                            {
                                <div class="mb-3 pb-3 border-bottom">
                                    <div class="d-flex justify-content-between">
                                        <strong>@contribution.NomContributeur</strong>
                                        <span class="text-success fw-bold">@contribution.Montant.ToString("C")</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(contribution.Message))
                                    {
                                        <p class="text-muted small mb-1">@contribution.Message</p>
                                    }
                                    <small class="text-muted">@contribution.DateContribution.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <button class="btn btn-secondary mt-3" @onclick="GoBack">
            <i class="bi bi-arrow-left"></i> Retour
        </button>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private CagnotteDto? cagnotte;
    private List<ContributionDto> contributions = new();
    private bool isLoading = true;
    private bool isSubmittingContribution = false;
    private string? errorMessage;
    private string? successMessage;

    private CreateContributionRequest contributionRequest = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            cagnotte = await CagnotteService.GetCagnotteByIdAsync(Id);
            if (cagnotte != null)
            {
                contributions = await CagnotteService.GetContributionsAsync(Id);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleContribution()
    {
        isSubmittingContribution = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            await CagnotteService.AddContributionAsync(Id, contributionRequest);
            successMessage = "Merci pour votre contribution !";
            
            // Réinitialiser le formulaire
            contributionRequest = new();
            
            // Recharger les données
            await LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur: {ex.Message}";
        }
        finally
        {
            isSubmittingContribution = false;
        }
    }

    private int GetPercentage()
    {
        if (cagnotte == null || cagnotte.MontantObjectif == 0) return 0;
        var percentage = (int)((cagnotte.MontantCollecte / cagnotte.MontantObjectif) * 100);
        return Math.Min(percentage, 100);
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }
}